<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#00000000"
    tools:cardBackgroundColor="@color/basic_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_offer_1"
            android:adjustViewBounds="true"
            android:maxWidth="133dp"
            android:maxHeight="133dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize16Percent"
            />

        <TextView
            android:id="@+id/die_antwoor"
            style="die_antwoor"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:gravity="top"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:lineSpacingExtra="0sp"
            android:textAppearance="@style/die_antwoor"
            android:translationY="-0.05sp"
            tools:text="Die Antwoord" />

        <TextView
            android:id="@+id/city"
            style="@style/buda"
            android:layout_width="62dp"
            android:layout_height="17dp"
            android:textSize="14sp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/some_id"
            android:textAppearance="@style/some_id"
            android:translationY="-0.05sp"
            tools:text="Будапешт" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_airplane" />

            <TextView
                android:id="@+id/some_id2"
                style="@style/price"
                android:layout_width="72dp"
                android:layout_height="17dp"
                android:textSize="14sp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="@string/some_id"
                android:textAppearance="@style/some_id"
                android:translationY="-0.05sp"
                tools:text="от 22 264 ₽" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>